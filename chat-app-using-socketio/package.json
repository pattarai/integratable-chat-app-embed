{
  "name": "mr-chat-client",
  "version": "1.1.0",
  "description": "A simple live chat widget based on socket.io, express.js and react.js!",
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "main": "dist/Chat.js",
  "module": "dist/Chat.js",
  "files": [
    "dist",
    "README.md"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crispinr/mr-chat-client.git"
  },
  "keywords": [
    "react",
    "chat"
  ],
  "author": "Regis, Crispin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crispinr/mr-chat-client/issues"
  },
  "homepage": "https://github.com/crispinr/mr-chat-client#readme",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "react-scroll-to-bottom": "^4.2.0",
    "socket.io-client": "^4.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "publish:npm": "(if exist dist rmdir /s /q dist) && mkdir dist && babel ./src/components -d dist --copy-files"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/preset-react": "^7.16.7"
  }
}
